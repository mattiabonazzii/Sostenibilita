extends layout

block content
  style.
    /* Stili generali */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f9f9f9;
      color: #333;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      font-size: 2.8rem;
      margin-bottom: 15px;
    }

    h3 {
      text-align: center;
      color: #7f8c8d;
      font-size: 1.2rem;
      margin-bottom: 25px;
    }

    div {
      background: white;
      padding: 20px;
      border-radius: 8px;
      max-width: 800px;
      margin: 0 auto;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    p {
      font-size: 1.1rem;
      line-height: 1.6;
      color: #34495e;
    }

    a {
      display: block;
      text-align: center;
      margin-top: 20px;
      text-decoration: none;
      color: #3498db;
      font-weight: bold;
    }

    a:hover {
      color: #2980b9;
    }

    /* Footer Styles */
    footer {
      background: #2c3e50;
      color: white;
      padding: 20px 0;
      text-align: center;
      margin-top: 30px;
    }

    footer a {
      color: #f39c12;
      text-decoration: none;
      font-weight: bold;
    }

    footer a:hover {
      color: #d35400;
    }

    footer p {
      margin: 5px 0;
      font-size: 0.9rem;
    }

  h1= post.title
  h3 Autore: #{post.author} | Data: #{post.date} | Categoria: #{post.category}
  //- Visualizzazione del contenuto del post
  div
    p= post.content


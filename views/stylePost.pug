block content
  style.
    /* Stili generali */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f9f9f9;
      color: #333;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      font-size: 2.8rem;
      margin-bottom: 15px;
    }

    h3 {
      text-align: center;
      color: #7f8c8d;
      font-size: 1.2rem;
      margin-bottom: 25px;
    }

    div {
      background: white;
      padding: 20px;
      border-radius: 8px;
      max-width: 800px;
      margin: 0 auto;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    p {
      font-size: 1.1rem;
      line-height: 1.6;
      color: #34495e;
    }

    a {
      display: block;
      text-align: center;
      margin-top: 20px;
      text-decoration: none;
      color: #3498db;
      font-weight: bold;
    }

    a:hover {
      color: #2980b9;
    }

  include footer.pug
